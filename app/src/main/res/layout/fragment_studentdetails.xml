<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addStudentFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backbtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/backbtn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update student"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    />

                <ImageView

                    android:id="@+id/menubtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/menybtn"/>





            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="30dp"
                app:cardCornerRadius="20dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/profilePic"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/batchimg"

                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Student ID *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Student ID"
                        android:textColor="#84D13C"
                        android:layout_margin="10dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Roll Number *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Roll Number"
                        android:textColor="#84D13C"
                        android:layout_margin="10dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Student Name *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Student Name"
                        android:textColor="#84D13C"
                        android:layout_margin="10dp"
                        android:textSize="20dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Parent's Name *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Parent's Name"
                        android:textColor="#84D13C"
                        android:layout_margin="10dp"
                        android:textSize="20dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Birth day"
                        android:clickable="true"
                        android:textColor="#84D13C"
                        android:editable="false"
                        android:layout_margin="10dp"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile No *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile No"
                        android:maxLength="10"
                        android:inputType="phone"

                        android:textColor="#84D13C"

                        android:layout_margin="10dp"
                        android:textSize="20dp"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"

                            android:button="@android:color/transparent"
                            android:background="@drawable/selectorradio"
                            android:textColor="@drawable/textradio"
                            android:elevation="4dp"
                            android:padding="5dp"

                            android:layout_margin="16dp"
                            />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:button="@android:color/transparent"
                            android:background="@drawable/selectorradio"
                            android:textColor="@drawable/textradio"
                            android:elevation="4dp"
                            android:padding="5dp"
                            android:layout_margin="16dp"/>


                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"


                        android:textColor="#84D13C"

                        android:layout_margin="10dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Batch *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>

                    <Spinner

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select the batch"


                        android:textColor="#84D13C"

                        android:layout_margin="10dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment Method *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>

                    <Spinner

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Payment Method"


                        android:textColor="#84D13C"

                        android:layout_margin="10dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fees Amount *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="amount"


                        android:textColor="#84D13C"

                        android:layout_margin="10dp"
                        android:textSize="20dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Starting Date *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText

                        android:id="@+id/startdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select stating date"


                        android:textColor="#84D13C"
                        android:editable="false"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="School/College *"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="School/College"


                        android:textColor="#84D13C"

                        android:layout_margin="10dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Field 1"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="filed 1"


                        android:textColor="#84D13C"

                        android:layout_margin="10dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Field 2"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Field 2"


                        android:textColor="#84D13C"

                        android:layout_margin="10dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Field 3"
                        android:textSize="25dp"
                        android:layout_margin="10dp"/>
                    <EditText


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Field 3"


                        android:textColor="#84D13C"

                        android:layout_margin="10dp"
                        android:textSize="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attrachments"
                            android:textSize="25dp"
                            android:layout_margin="10dp"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="15dp"
                            android:src="@drawable/addbtn"/>




                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:layout_margin="20dp"
                        android:textColor="@android:color/white"
                        android:text="Update Student"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </FrameLayout>
</ScrollView>